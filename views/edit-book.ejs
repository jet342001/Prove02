<%- include('includes/head.ejs') %>
</head>

<body>
   <%- include('includes/nav.ejs') %>

    <main>
        <form class="book-form" action="<% if (editing) { %>/edit-book<% } else { %>/add-books<% } %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if (editing) { %><%= book.title %><% } %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%= book.imageUrl %><% } %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<% if (editing) { %><%= book.price %><% } %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><% if (editing) { %><%= book.description %><% } %></textarea>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= book.id %>" name="bookId">
            <% } %>


            <button class="btn" type="submit"><% if (editing){ %>Update Book<%} else { %> Add Book <% }  %></button>
            <% if (editing){ %>
            <button type="submit" class="btn" form="deleteForm">Delete Book </button>
                <%}%>
        </form>
            <% if (editing){ %> 
            <form id="deleteForm" action="/deleteBook" method="post">
                <input type="hidden" value="<%= book.id %>" name="bookId">
            </form>
            <%}%>
    </main>
<%- include('includes/end.ejs') %>